<div class="contents row">
  <div class="container">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email,"メールアドレスの登録<span class='required'> 必須</span>".html_safe %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password,"パスワード<span class='required'> 必須</span>".html_safe %>
        <% if @minimum_password_length %>
          <em>(半角英数字混合で<%= @minimum_password_length %> 文字以上のパスワード)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation,"確認用パスワード<span class='required'> 必須</span>".html_safe %><em>(もう一度パスワードを入力してください)</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>


      <div class="field">
        <%= f.label :nickname, "表示名の設定<span class='required'> 必須</span>".html_safe %> <em>(10文字以内、名前にスペース(空白)は使えません)</em><br />
        <%= f.text_field :nickname,maxlength: 10 %>
      </div>

      <div class="field">
        <%= f.label :account_name, "アカウント名の設定<span class='required'> 必須</span>".html_safe %> <em>(8文字以上16文字以内の半角英数字)</em><br />
        <%= f.text_field :account_name,maxlength: 16 %>
      </div>

      <div class="field">
        <%= f.label :avatar, "プロフィール画像の設定" %><br>
        <%= f.file_field :avatar %>
      </div>

      <div class="field">
        <%= f.label :bio, "自己紹介の設定" %> <em>(最大100文字)</em><br />
        <%= f.text_area :bio,maxlength: 100 %>
      </div>

      

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
  </div>
</div>
